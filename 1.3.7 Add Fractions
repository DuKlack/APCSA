public class AddFractions 
{
    public static void main(String[] args)
    {
        int numerator1=1;
        System.out.println("The numerator of the first fraction is "+numerator1);
        int numerator2=1;
        int denominator1=2;
        System.out.println("The denominator of the first fraction is 2");
        int denominator2=4;
        System.out.println("The numerator of the second fraction is 2");
        System.out.println("The denominator of the second fraction is 5");
        System.out.println("The sum of "+numerator1+"/"+denominator1+"+"+numerator2+"/"+denominator2+"="+((numerator1*denominator2)+(numerator2*denominator1))+"/"+(denominator1*denominator2));
    }
}
